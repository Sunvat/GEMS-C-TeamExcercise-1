class main{ //for testing
    public static void main(String[] args) {
        Scanner inp = newScanner(System.in);
        System.out.println("What would you like to do?"); 
        String feature = inp.nextString();

        if(feature == "add" || feature == "Add"){ //recognizing use of add feature
            System.out.println("Enter two numbers"); 
            int n = inp.nextInt();//integer 1 recieved
            int b = inp.nextInt();//integer 2 recieved
            int x = add(n,b); // calling add function, sending integers
        }

        System.out.println("Addition is: " + x); 
    }

    public static int add(int a, int b){
        return (a+b); //adding integers
    }


}